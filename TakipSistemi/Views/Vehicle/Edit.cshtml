@model TakipSistemi.Models.Vehicle

<h2>Araç Düzenle</h2>

<form asp-action="Edit" method="post" class="form-horizontal">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="CompanyName" class="control-label">Bağlı Olduğu Şirket</label>
        @Html.DropDownListFor(
                 model => model.CompanyName,
                 (SelectList)ViewBag.Companies,
                 "Şirket Seçin",
                 new { @class = "form-control" }
                 )
    </div>

    <div class="form-group">
        <label for="FuelType" class="control-label">Yakıt Türü</label>
        @Html.DropDownListFor(
                 model => model.FuelType,
                 (SelectList)ViewBag.FuelTypes,
                 "Yakıt Türü Seçin",
                 new { @class = "form-control" }
                 )
    </div>

    <div class="form-group">
        <label for="Brand" class="control-label">Marka</label>
        <input type="text" id="Brand" name="Brand" value="@Model.Brand" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Model" class="control-label">Model</label>
        <input type="text" id="Model" name="Model" value="@Model.Model" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="ModelYear" class="control-label">Model Yılı</label>
        <input type="number" id="ModelYear" name="ModelYear" value="@Model.ModelYear" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="ChassisNumber" class="control-label">Şasi Numarası</label>
        <input type="text" id="ChassisNumber" name="ChassisNumber" value="@Model.ChassisNumber" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Plate" class="control-label">Plaka</label>
        <input type="text" id="Plate" name="Plate" value="@Model.Plate" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="AssignedDepartment" class="control-label">Tahsis Edilen Departman</label>
        <input type="text" id="AssignedDepartment" name="AssignedDepartment" value="@Model.AssignedDepartment" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="AssignedPerson" class="control-label">Tahsis Edilen Kişi</label>
        <input type="text" id="AssignedPerson" name="AssignedPerson" value="@Model.AssignedPerson" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="AssignedPersonEmail" class="control-label">İlgili Kişi Maili</label>
        <input type="email" id="AssignedPersonEmail" name="AssignedPersonEmail" value="@Model.AssignedPersonEmail" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="InsuranceCompany" class="control-label">Sigorta Firma</label>
        <input type="text" id="InsuranceCompany" name="InsuranceCompany" value="@Model.InsuranceCompany" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="InsurancePrice" class="control-label">Sigorta Fiyatı</label>
        <input type="number" id="InsurancePrice" name="InsurancePrice" value="@Model.InsurancePrice" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="InsuranceDate" class="control-label">Sigorta Tarihi</label>
        <input type="date" id="InsuranceDate" name="InsuranceDate" value="@Model.InsuranceDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="CascoCompany" class="control-label">Kasko Firma</label>
        <input type="text" id="CascoCompany" name="CascoCompany" value="@Model.CascoCompany" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="CascoPrice" class="control-label">Kasko Fiyatı</label>
        <input type="number" id="CascoPrice" name="CascoPrice" value="@Model.CascoPrice" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="CascoDate" class="control-label">Kasko Tarihi</label>
        <input type="date" id="CascoDate" name="CascoDate" value="@Model.CascoDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="InspectionDate" class="control-label">Muayene Tarihi</label>
        <input type="date" id="InspectionDate" name="InspectionDate" value="@Model.InspectionDate" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a href="@Url.Action("Index", "Vehicle")" class="btn btn-secondary">Geri</a>
</form>
