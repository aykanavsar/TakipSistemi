@{
    ViewData["Title"] = "Anasayfa";
}

<!-- Ana Sayfa Başlık -->
<div class="container text-center mt-5">
    <h1 class="display-4 text-primary font-weight-bold">Takip Sistemi</h1>
    <p class="lead text-muted mt-3">
        Araç ve taşınmaz yönetimini kolaylaştıran sisteminize hoş geldiniz!
    </p>
    <hr class="my-4" />
</div>

<!-- Kartlar ile Bölümleme -->
<div class="container mt-5">
    <div class="row">
        <!-- Araç Yönetimi Kartı -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-car fa-3x text-primary mb-3"></i>
                    <h5 class="card-title font-weight-bold">Araç Yönetimi</h5>
                    <p class="card-text text-muted">Araç ekleme, güncelleme ve silme işlemlerini buradan gerçekleştirin.</p>
                    <a href="@Url.Action("Index", "Vehicle")" class="btn btn-outline-primary">Araç Listesine Git</a>
                </div>
            </div>
        </div>

        <!-- Taşınmaz Yönetimi Kartı -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100 text-center">
                <div class="card-body">
                    <i class="fas fa-building fa-3x text-success mb-3"></i>
                    <h5 class="card-title font-weight-bold">Taşınmaz Yönetimi</h5>
                    <p class="card-text text-muted">Taşınmaz ekleme, güncelleme ve silme işlemlerini buradan gerçekleştirin.</p>
                    <a href="@Url.Action("Index", "Property")" class="btn btn-outline-success">Taşınmaz Listesine Git</a>
                </div>
            </div>
        </div>
    </div>
</div>


